  <xs:simpleType name="HolidayCalendarEnumeration">
    <xs:restriction base="xs:string">
      <xs:enumeration value="NONE"/>
      <xs:enumeration value="WKN"/>
      <xs:enumeration value="USD"/>
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="DaysOfWeekGrid">
    <xs:restriction base="xs:string">
      <xs:pattern value="[M_][T_][W_][T_][F_][S_][S_]"/>
    </xs:restriction>
  </xs:simpleType>
  
  <xs:complexType name="DailyScheduleSpecification">
    <xs:attribute name="Time" type="xs:time" use="required"/>
    <xs:attribute name="DaysOfWeek" type="DaysOfWeekGrid" use="required"/>
    <xs:attribute name="HolidayCalendar" type="HolidayCalendarEnumeration" use="required"/>
  </xs:complexType>

  <xs:complexType name="HourlyScheduleSpecification">
    <xs:attribute name="StartTime" type="xs:time" use="required"/>
    <xs:attribute name="EndTime" type="xs:time" use="required"/>
    <xs:attribute name="DaysOfWeek" type="DaysOfWeekGrid" use="required"/>
    <xs:attribute name="HolidayCalendar" type="HolidayCalendarEnumeration" use="required"/>
  </xs:complexType>
  
